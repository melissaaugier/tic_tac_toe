<div class="container">
  <h1>A vous de jouer !</h1>
  <div class="row row-cols-3">
    <% @grid.cases.order(:position).each do |cas| %>
      <div class="col border py-2" style="background-color: #bbad9f;">
        <%= form_tag grid_case_path(@grid, cas), method: :patch do %>
          <%= hidden_field_tag :case, !cas.value %>
          <%= submit_tag !cas.value ? " " : cas.symbol, class: 'h1 w-100', style: "height: 100px; background-color: #ede4da; border:none;" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if @cases_left.length == 1 %>
      <%= link_to 'Allez viens, on rejoue ! ', grids_path, method: :post, class: 'btn btn-primary stretched-link my-3'  %>
  <% end %>
</div>
